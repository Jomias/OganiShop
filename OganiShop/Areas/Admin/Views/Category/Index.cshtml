        });
            $(document).ready(function () {
                $('.delete-btn').on('click', function (e) {
                    e.preventDefault();
                    const confirmation = confirm('Are you sure you want to delete this category?');
                    if (confirmation) {
                        window.location.href = e.target.href;
                    }
                });
            });
    </script>
