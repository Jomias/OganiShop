        });

        $(document).ready(function () {
            var message = '@TempData["Message"]';
            if (message) {
                alert(message);
            }
        });
            $(document).ready(function () {
                $('.delete-btn').on('click', function (e) {
                    e.preventDefault();
                    const confirmation = confirm('Are you sure you want to delete this order?');
                    if (confirmation) {
                        window.location.href = e.target.href;
                    }
                });
            });
    </script>
